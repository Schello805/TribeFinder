# Database (PostgreSQL)
DATABASE_URL="postgresql://tribefinder:your_password@localhost:5432/tribefinder?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-here"

# File storage
UPLOADS_DIR="/var/www/tribefinder/uploads"
BACKUP_DIR="/var/www/tribefinder/backups"

# Maintenance
# If enabled, all write requests (POST/PUT/PATCH/DELETE) are blocked for non-admin users.
MAINTENANCE_MODE="false"

# E-Mail-Adresse, die bei der Registrierung automatisch ADMIN wird
DEFAULT_ADMIN_EMAIL="admin@example.com"

# SMTP (erforderlich f√ºr E-Mail-Verifizierung)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""
