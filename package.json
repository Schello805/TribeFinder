{
  "name": "tribe-finder",
  "version": "0.2.5",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "prebuild": "prisma generate",
    "build": "next build --webpack && mkdir -p .next/standalone/.next && rm -rf .next/standalone/.next/static && cp -R .next/static .next/standalone/.next/ && rm -rf .next/standalone/.next/server && cp -R .next/server .next/standalone/.next/ && rm -rf .next/standalone/public && cp -R public .next/standalone/",
    "start": "HOSTNAME=0.0.0.0 PORT=3000 node .next/standalone/server.js",
    "lint": "eslint",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "node scripts/db-reset.js",
    "db:push": "prisma db push",
    "db:validate": "prisma validate",
    "db:seed-styles": "node scripts/seed-dance-styles.js",
    "db:backup": "./scripts/backup-db.sh",
    "deploy": "./scripts/deploy-native.sh",
    "setup": "./scripts/setup-native.sh"
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "5.10.2",
    "@react-pdf/renderer": "^4.3.2",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^10.0.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "framer-motion": "^12.23.26",
    "isomorphic-dompurify": "^2.35.0",
    "jspdf": "^2.5.2",
    "leaflet-gesture-handling": "^1.2.2",
    "next": "16.1.1",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.12",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "qrcode": "^1.5.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sharp": "^0.33.5",
    "swr": "^2.3.8",
    "use-debounce": "^10.0.6",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "optionalDependencies": {
    "@tailwindcss/oxide-linux-x64-gnu": "4.1.18",
    "lightningcss-linux-x64-gnu": "1.30.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^20.19.27",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "bcryptjs": "^3.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.4.0",
    "leaflet": "^1.9.4",
    "postcss": "^8.5.6",
    "prisma": "5.10.2",
    "react-leaflet": "^5.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
